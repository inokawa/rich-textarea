{
  "name": "relight",
  "version": "0.0.1",
  "description": "A tiny React component for flexible text highlighting.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc -p . --noEmit",
    "tsc:d": "tsc -p . --outDir lib -d --emitDeclarationOnly",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepublishOnly": "rimraf lib && npm run build && npm run tsc:d"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.0",
    "@storybook/addon-essentials": "6.4.13",
    "@storybook/addon-links": "6.4.13",
    "@storybook/react": "6.4.13",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.64.0",
    "typescript": "4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/relight.git"
  },
  "keywords": [
    "react"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inokawa/relight/issues"
  },
  "homepage": "https://github.com/inokawa/relight#readme",
  "dependencies": {
    "range-at-index": "^1.0.4"
  }
}
