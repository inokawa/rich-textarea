{
  "name": "rich-textarea",
  "version": "0.4.1",
  "description": "A small React component to colorize, highlight and decorate your textarea.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc -p . --noEmit",
    "tsc:d": "tsc -p . --outDir lib -d --emitDeclarationOnly",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepublishOnly": "rimraf lib && npm run build && npm run tsc:d"
  },
  "dependencies": {
    "react-merge-refs": "^1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.0",
    "@storybook/addon-essentials": "6.4.14",
    "@storybook/addon-links": "6.4.14",
    "@storybook/react": "6.4.14",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "27.4.0",
    "jest": "27.4.7",
    "monaco-diff": "1.1.1",
    "prism-react-renderer": "1.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.66.0",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/rich-textarea.git"
  },
  "keywords": [
    "react",
    "textarea",
    "highlight",
    "richtext",
    "editor",
    "contenteditable"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inokawa/rich-textarea/issues"
  },
  "homepage": "https://github.com/inokawa/rich-textarea#readme"
}
