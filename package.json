{
  "name": "rich-textarea",
  "version": "0.26.5",
  "description": "A small customizable textarea for React to colorize, highlight, decorate texts, offer autocomplete and much more.",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.cjs",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc -p . --noEmit",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "vitest run --project=unit",
    "test-storybook": "vitest run --project=storybook",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "e2e": "npx playwright test",
    "typedoc": "typedoc",
    "size": "size-limit",
    "prepare": "patch-package",
    "prepublishOnly": "npm run typedoc && rimraf lib && npm run build"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-pure-annotations": "^7.24.7",
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.0.0",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-vitest": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@tanstack/react-form": "^1.12.0",
    "@testing-library/dom": "^10.3.1",
    "@testing-library/react": "^16.1.0",
    "@textlint/kernel": "^15.0.0",
    "@textlint/textlint-plugin-text": "^15.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-highlight-words": "^0.20.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "assert": "^2.1.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^6.0.0-rc.1",
    "events": "^3.3.0",
    "formik": "^2.4.6",
    "jsdom": "^25.0.0",
    "kuromojin": "^3.0.1",
    "monaco-diff": "^1.2.1",
    "node-emoji": "^2.2.0",
    "patch-package": "^8.0.0",
    "path-browserify": "^1.0.1",
    "playwright": "^1.55.0",
    "prettier": "^3.3.2",
    "prism-react-renderer": "^2.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-highlight-words": "^0.21.0",
    "react-hook-form": "^7.53.1",
    "react-is": "^19.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.14.3",
    "rollup-plugin-banner2": "^1.3.0",
    "size-limit": "^11.1.4",
    "storybook": "^9.1.5",
    "textlint-rule-preset-japanese": "^10.0.4",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.26.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=16.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/rich-textarea.git"
  },
  "keywords": [
    "react",
    "react-component",
    "textarea",
    "input",
    "form",
    "highlight",
    "autocomplete",
    "tagging",
    "combobox",
    "autosize",
    "richtext",
    "editor",
    "contenteditable",
    "wysiwyg"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inokawa/rich-textarea/issues"
  },
  "homepage": "https://github.com/inokawa/rich-textarea#readme"
}
